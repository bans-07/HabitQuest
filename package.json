{
  "name": "habitquest",
  "version": "1.0.0",
  "description": "A MERN stack single-page application for habit tracking and mindfulness.",
  "main": "server/server.ts",
  "scripts": {
    "start": "cd server && npm run start",
    "dev": "concurrently \"cd server && npm run watch\" \"cd client && npm run dev\"",
    "server": "ts-node-dev --respawn --transpile-only server/server.ts",
    "client": "npm --prefix client run dev",
    "build": "concurrently \"cd server && npm run build\" \"cd client && npm run build\"",
    "build-server": "tsc -p server",
    "build-client": "cd client && npm run build"
  },
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "graphql": "^16.7.1",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^4.0.0",
    "mongoose": "^7.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.22",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.9",
    "@types/react": "^19.1.4",
    "concurrently": "^8.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
